<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="tnx_stock_picking" model="ir.actions.report">
        <field name="name">Bon de livraisons</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_stock.tnx_stock_picking</field>
        <field name="report_file">tnx_stock.tnx_stock_picking</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="stock.model_stock_picking" />
    </record>

    <record id="paperformat_sale_summary_report" model="report.paperformat">
        <field name="name">picking report </field>
        <field name="default" eval="False" />
        <field name="format">A5</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">15</field>
        <field name="margin_right">4</field>
        <field name="margin_left">4</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="tnx_stock.tnx_stock_picking" model="ir.actions.report">
        <field name="paperformat_id" ref="tnx_stock.paperformat_sale_summary_report" />
    </record>

    <!-- template tsiky  -->
    <template id="tnx_stock_picking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-if="not o" t-set="o" t-value="o" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>

                <div class="header">
                    <!-- TODO here we can create header -->
                    <div class="body_header">
                        <br />
                        <div class="row text-center" style="margin-left: 05px; margin-right: 05px;">
                            <div class="col-4">
                                <div>
                                    <img t-if="company.logo" style="max-height:50px" t-att-src="image_data_uri(company.logo)" />
                                </div>
                                <span class="font-weight-bold">
                                    MANUFACTURE DE BOUTONS SERVICE ETIQUETAGE
                                </span>
                                <br />
                                <div>Lot 18 D Imerinafovoany </div>
                                <div class="text-left" style="font-size:14px;">BP. 11064 - Antananarivo - Madagascar</div>
                                <div>
                                    <span>Tél :</span>
                                    <span>22 441 35 / 03402 02 441 35</span>
                                </div>
                                <div>
                                    <span>E-mail : contact@tanacrex.com</span>
                                </div>
                                <div>
                                    <div>
                                        <span>R.C 13 332 - STAT :</span>
                                        <span t-esc="company.stat" />
                                    </div>
                                    <div>
                                        <span>NIF :</span>
                                        <span t-esc="company.nif" />
                                    </div>
                                    <br />
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="row">
                                    <div class="col-7">
                                        <h3 class="text-center font-weight-bold">BON DE LIVRAISON</h3>
                                    </div>
                                    <div class="col-5">
                                        <h4>
                                            <span>N°</span>
                                            <span class="font-weight-bold">5069</span>
                                        </h4>
                                    </div>
                                </div>
                                <br />
                                <div class="text-right" style="font-size: 18px;">
                                    <div>
                                        <span>Date :</span>
                                        <span t-esc="o.date_done" />
                                    </div>
                                    <br />
                                    <div>
                                        <u>
                                            <span>CLIENT</span>
                                        </u>
                                        <span>: </span>
                                        <span t-esc="o.partner_id.name" />
                                    </div>
                                    <br />
                                    <div>
                                        <span>Bon de commande N° : </span>
                                        <span t-esc="o.name" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="article mt0 o_report_layout_standard text-center">
                        <style type="text/css">
                            table, th, td {
                                border: 1px solid black;
                              }
                        </style>
                        <table class="table" clearname="stock_move_table" style="font-size:14px;">
                            <tr>
                                <td>Quantité</td>
                                <td>Reférence</td>
                                <td>Designation</td>
                                <td>Colisage</td>
                            </tr>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)" />
                            <tr t-foreach="lines" t-as="move">
                                <tr>
                                    <td>
                                        <span t-field="move.product_uom_qty" />
                                    </td>
                                    <td>
                                        <span t-field="move.product_id.default_code" />
                                    </td>
                                    <td>
                                        <span t-field="move.product_id.name" />
                                    </td>
                                    <td></td>
                                </tr>
                            </tr>
                        </table>
                        <br />
                        <div>
                            <span style="font-size:12px;">
                                Aucune réclamation ne sera admise aprés la validation. La marchandise livrée reste la propriété du vendeur jusqu'au pauement intégral de la facture
                            </span>
                        </div>

                        <br />

                        <div class=" row text-center">
                            <div class=" col-4">
                                <span>CONTRÔLE</span>
                            </div>
                            <div class=" col-4">
                                <span>LIVREUR</span>
                            </div>
                            <div class=" col-4">
                                <span>DESTINATAIRE</span>
                            </div>
                        </div>

                    </div>
                    <div class=" footer o_standard_footer" style=" font-size:10px">
                        <div class=" row text-center">
                            <div class=" col col-12 text-center">
                                <ul class=" list-inline">
                                    <li class=" list-inline-item">Page:</li>
                                    <li class=" list-inline-item">
                                        <span class=" page" />
                                    </li>
                                    <li class=" list-inline-item">/</li>
                                    <li class=" list-inline-item">
                                        <span class=" topage" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </t>

        </t>
    </template>


</odoo>