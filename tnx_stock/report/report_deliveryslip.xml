<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="tnx_stock_picking" model="ir.actions.report">
        <field name="name">Bon de livraison tnx</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_stock.tnx_stock_picking</field>
        <field name="report_file">tnx_stock.tnx_stock_picking</field>
        <field name="attachment_use" eval="True" />
    </record>

    <record id="paperformat_sale_summary_report" model="report.paperformat">
        <field name="name">picking report </field>
        <field name="default" eval="False" />
        <field name="format">A5</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">15</field>
        <field name="margin_right">7</field>
        <field name="margin_left">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="tnx_stock.tnx_stock_picking" model="ir.actions.report">
        <field name="paperformat_id" ref="tnx_stock.paperformat_sale_summary_report" />
    </record>

    <!-- template tsiky  -->
    <template id="tnx_stock_picking">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />

                <t t-if="not o" t-set="o" t-value="o" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <div class="header">
                    <!-- TODO here we can create header -->
                    <div class="body_header" >
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-6">
                                    <div>
                                        <img t-if="company.logo" style="max-height:50px" t-att-src="image_data_uri(company.logo)" />
                                    </div>
                                    <div style="font-size:10px;text-align:center">

                                        <div >
                                            <span style="font-weight:bold;">Manufacturing Buttons and Labels since 1983</span>
                                        </div>
                                        <div>
                                            STAT:
                                            <span t-esc="company.stat" />
                                        </div>
                                        <div>
                                            NIF:
                                            <span t-esc="company.nif" />
                                        </div>
                                        <div>
                                            <span>
                                                Lot 18 D Imerinafovoany
                                            </span>
    
    
                                        </div>
                                        <div>
                                            <span>
                                                B.p.:11064 - tel.:
                                                <span t-esc="company.phone" />
                                            </span>
                                        </div>
                                        <div>
                                            <span>
                                                e-mail:contact@tanacrex.com
                                            </span>
                                        </div>
                                        <div>
                                            ANTANANARIVO -
                                            <b>MADAGASCAR</b>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6 " style="margin-left:300px;font-size:12px;padding-top:50px">
                                    
                                    <table  style="width:100%">
                                        <tbody>
                                            <tr>
                                                <td>Date:</td>
                                                <td>
                                                    <span t-esc="o.date_done" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Client:</td>
                                                <td>
                                                    <span t-esc="o.partner_id.name" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Bon de commande N°:</td>
                                                <td>
                                                    <span t-esc="o.name" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!-- <table style="width:100%">
                                        <tbody>
                                            <tr>
                                                <td style="width:20%">Client:</td>
                                                <td>
                                                    <span t-esc="o.partner_id.name" />
                                                </td>

                                                <td style="width:10%">Bon de commande N°:</td>
                                                <td>
                                                    <span t-esc="o.name" />
                                                </td>
                                                
                                            </tr>
                                            
                                        </tbody>
                                    </table> -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="article mt0 o_report_layout_standard" style="font-size:12px;">

                    <div style="text-align:center">
                        <h2>BON DE LIVRAISON</h2>
                    </div>

                    <table class="table table-sm"  name="stock_move_table">
                        
                        <tr>
                            <td>Quantité</td>
                            <td>Reférence</td>
                            <td>Designation</td>
                            <td>Surface</td>
                            <td>Colisage</td>
                        </tr>
                        <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)" />
                        <tr t-foreach="lines" t-as="move">
                            <tr>
                                <td>
                                    <span t-field="move.product_uom_qty" />
                                </td>
                                <td>
                                    <span t-field="move.product_id.default_code" />
                                </td>
                                <td>
                                    <span t-field="move.product_id.name" />
                                </td>
                                <td>
                                    <span t-field="move.product_id.surface" />
                                </td>
                                <td>
                                    
                                </td>
                            </tr>

                        </tr>
                    </table>

                    <div>
                        <span>
                            Aucune réclamation ne sera admise aprés la validation. La marchandise livrée reste la propriété du vendeur jusqu'au pauement intégral de la facture
                        </span>
                    </div>
                    <div>
                        <table style="width:100%;font-size:20px;text-align:center">
                            <tbody>
                                <tr>
                                    <td>Contrôle</td>
                                    <td>Livreur</td>
                                    <td>Destinataire</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="footer o_standard_footer" style="font-size:10px">
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            
                            <ul class="list-inline">
                                <li class="list-inline-item">Page:</li>
                                <li class="list-inline-item">
                                    <span class="page" />
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="topage" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </t>

        </t>
    </template>


</odoo>