<odoo>
    <data>
        <template id="report_etiquette_nexource">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <style type="text/css">
                        .tg  {border-collapse:collapse;border-spacing:0;}
                        .tg td{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:40px;
                          overflow:hidden;padding:30px 15px;word-break:normal;}
                        .tg th{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:40px;
                          font-weight:normal;overflow:hidden;padding:30px 15px;word-break:normal;}
                        .tg .tg-0pky{border-color:inherit;text-align:left;vertical-align:top}
                    </style>
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                    <t t-if="not o" t-set="o" t-value="o" />
                    <t t-if="not company">
                        <t t-if="company_id">
                            <t t-set="company" t-value="company_id" />
                        </t>
                        <t t-elif="o and 'company_id' in o">
                            <t t-set="company" t-value="o.company_id.sudo()" />
                        </t>
                        <t t-else="else">
                            <t t-set="company" t-value="res_company" />
                        </t>
                    </t>
                    <t t-foreach="o.move_line_ids_without_package" t-as="line">
                      <div>
                            <table class="tg" style="height: 290px !important; width: 680px !important;page-break-inside: avoid;">
                                <colgroup>
                                    <col style="width: 270px" />
                                    <col style="width: 270px" />
                                </colgroup>
                                <thead>
                                    <tr>
                                        <th class="tg-0pky" colspan="2" style="padding: 6px !important">
                                            <div class="row">
                                                <div class="col-6" style="text-align: center; !important;">
                                                    <img t-if="company.logo" style="height: 60px;" t-att-src="image_data_uri(company.logo)" />
                                                </div>
                                                <div class="col-6 text-center" style="font-size:19px;!important;">
                                                    <div>SARL au capital de 30 000 000 AR </div>
                                                    <div> Tel :(261) 034 02 441 35</div>
                                                    <div> contact@tanacrex.com</div>
                                                    <div> www.tanacrex.com</div>
                                                </div>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody style="font-size : 10px !important;">
                                    <tr>
                                        <td class="tg-0pky" colspan="2" style="font-size : 25px;font-weight: bold;padding: 6px; margin: 0 !important;">
                                            <span t-if="o.sale_id" t-esc="o.sale_id.sale_order_partner"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="tg-0pky" style="font-size:20px;font-weight: bold;margin: 0px; padding: 6px; !important;">
                                            <u>
                                                <b>ART :</b>
                                            </u>
                                            <div class="text-left">
                                                <t t-if="line.product_id">
                                                    <span t-esc="line.product_id.name" />

                                                </t>
                                            </div>
                                        </td>
                                        <td class="tg-0pky" style="margin: 0px; padding: 6px; !important;">
                                            <u>
                                                <b style="font-size:20px;">QTY :</b>
                                            </u>
                                            <span style="font-size:60px;font-weight: bold;" t-if="line.product_id" t-esc="o.get_right_number(line.unit_done)" />

                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="tg-0pky" style="font-size:20px;font-weight: bold;margin: 0px; padding: 6px !important;">
                                            <u>
                                                <b>TAILLE :</b>
                                            </u>
                                            <div class="text-left">
                                                <t t-if="line.product_id">
                                                    <span t-esc="line.product_id.dimension" />
                                                </t>
                                            </div>
                                        </td>
                                        <td class="tg-0pky" style="font-size:20px;font-weight: bold;margin: 0px; padding: 6px; !important;">
                                            <u>
                                                <b>POIDS :</b>
                                            </u>
                                            <div class="text-left">
                                                <t t-if="line.carton_id">
                                                    <span t-esc="line.carton_id.poids_brut" />
                                                    kg
                                                </t>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <record id="paperformat_etiquette_report" model="report.paperformat">
            <field name="name">paperformat.etiquette.nexource</field>
            <field name="default" eval="False" />
            <field name="disable_shrinking" eval="False" />
            <field name="format">custom</field>
            <field name="page_height">38</field>
            <field name="page_width">71</field>
            <field name="print_page_height">38</field>
            <field name="print_page_width">71</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">0</field>
            <field name="margin_right">0</field>
            <field name="margin_left">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">203</field>
        </record>
        <record id="action_etiquette_nexource_report" model="ir.actions.report">
            <field name="name">Etiquette carton nexource</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">tnx_stock.report_etiquette_nexource</field>
            <field name="report_file">tnx_stock.report_etiquette_nexource</field>
            <field name="print_report_name">'Etiquettes BL - %s' % (object.name)</field>
            <field name="binding_model_id" ref="stock.model_stock_picking" />
            <field name="binding_model_id" eval="False" />
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="tnx_stock.paperformat_etiquette_report" />
        </record>
    </data>
</odoo>