<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="note_de_colisage_paperformat" model="report.paperformat">
        <field name="name">[TNX] Note de colisage </field>
        <field name="default" eval="False" />
        <field name="disable_shrinking" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">15</field>
        <field name="margin_right">4</field>
        <field name="margin_left">4</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>
    <record id="action_tnx_package_report" model="ir.actions.report">
        <field name="name">Note de colisage</field>
        <field name="model">note.colisage.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_stock.tnx_package_report</field>
        <field name="report_file">tnx_stock.tnx_package_report</field>
        <field name="print_report_name">'Note de colisage - %s' % (object.partner_id.name)</field>
        <field name="binding_model_id" ref="tnx_stock.model_note_colisage_wizard" />
        <field name="binding_model_id" eval="False" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="tnx_stock.note_de_colisage_paperformat" />
    </record>
    <!-- Template Note de colisage -->
    <template id="tnx_package_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-if="not o" t-set="o" t-value="o" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>

                <div class="header">
                    <!-- TODO here we can create header -->
                    <div class="body_header">
                        <br />
                        <div class="row text-center" style="margin-left: 05px; margin-right: 05px;">
                            <div class="col-6">
                                <div>
                                    <img t-if="company.logo" style="max-height:50px" t-att-src="image_data_uri(company.logo)" />
                                </div>
                                <span class="font-weight-bold">
                                    MANUFACTURE DE BOUTONS SERVICE ETIQUETAGE
                                </span>
                                <br />
                                <div>Lot 18 D Imerinafovoany </div>
                                <div class="text-left" style="font-size:14px;">BP. 11064 - Antananarivo - Madagascar</div>
                                <div>
                                    <span>Tél :</span>
                                    <span>22 441 35 / 03402 02 441 35</span>
                                </div>
                                <div>
                                    <span>E-mail : contact@tanacrex.com</span>
                                </div>
                                <div>
                                    <div>
                                        <span>R.C 13 332 - STAT :</span>
                                        <span t-esc="company.stat" />
                                    </div>
                                    <div>
                                        <span>NIF :</span>
                                        <span t-esc="company.nif" />
                                    </div>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="text-center ">
                            <h6 class="font-weight-bold">
                                NOTE DE COLISAGE
                            </h6>
                            <h6>
                                <span>Client :</span>
                                <span t-esc="o.partner_id.name" />
                            </h6>
                        </div>
                    </div>
                    <div>
                        <span>Bon de livraison selectionné(s) :</span>
                        <ul>
                            <li t-foreach="o.stock_picking_ids" t-as="res">
                                <span t-esc="res.name" />
                            </li>
                        </ul>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>