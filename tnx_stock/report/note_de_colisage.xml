<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="note_de_colisage_paperformat" model="report.paperformat">
        <field name="name">[TNX] Note de colisage </field>
        <field name="default" eval="False" />
        <field name="disable_shrinking" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">15</field>
        <field name="margin_right">4</field>
        <field name="margin_left">4</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>
    <record id="action_tnx_package_report" model="ir.actions.report">
        <field name="name">Note de colisage</field>
        <field name="model">note.colisage.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_stock.tnx_package_report</field>
        <field name="report_file">tnx_stock.tnx_package_report</field>
        <field name="print_report_name">'Note de colisage - %s' % (object.partner_id.name)</field>
        <field name="binding_model_id" ref="tnx_stock.model_note_colisage_wizard" />
        <field name="binding_model_id" eval="False" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="tnx_stock.note_de_colisage_paperformat" />
    </record>
    <!-- Template Note de colisage -->
    <template id="tnx_package_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-if="not o" t-set="o" t-value="o" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>

                <div class="header" style="font-size : 13px !important;">
                    <!-- TODO here we can create header -->
                    <div class="body_header">
                        <br />
                        <div class="row text-center" style="margin-left: 1px; margin-right: 1px; ">
                            <div class="col-6">
                                <div>
                                    <img t-if="company.logo" style="max-height:40px" t-att-src="image_data_uri(company.logo)" />
                                </div>
                                <span class="font-weight-bold">
                                    MANUFACTURE DE BOUTONS SERVICE ETIQUETAGE
                                </span>
                                <br />
                                <div>Lot 18 D Imerinafovoany </div>
                                <div style="font-size:13px;">BP. 11064 - Antananarivo - Madagascar</div>
                                <div>
                                    <span>Tél :</span>
                                    <span>22 441 35 / 03402 02 441 35</span>
                                </div>
                                <div>
                                    <span>E-mail : contact@tanacrex.com</span>
                                </div>
                                <div>
                                    <div>
                                        <span>R.C 13 332 - STAT :</span>
                                        <span t-esc="company.stat" />
                                    </div>
                                    <div>
                                        <span>NIF :</span>
                                        <span t-esc="company.nif" />
                                    </div>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="text-center ">
                            <h6 class="font-weight-bold">
                                NOTE DE COLISAGE
                            </h6>
                            <h6>
                                <span>Client :</span>
                                <span t-esc="o.partner_id.name" />
                            </h6>
                        </div>
                    </div>
                    <div class="row">
                        <span>
                            <u>Poids net :</u>
                            <t t-esc="o.poids_net" />
                            kg
                        </span>
                        <br />
                        <span>
                            <u>Poids brut :</u>
                            <t t-esc="o.poids_brut" />
                            kg
                        </span>
                    </div>
                    <br />
                    <br />

                    <style type="text/css">
                        .tg  {border-collapse:collapse;border-spacing:0;}
                        .tg td{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
                          overflow:hidden;padding:10px 5px;word-break:normal;}
                        .tg th{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
                          font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;}
                        .tg .tg-mn8v{background-color:#9b9b9b;border-color:inherit;font-weight:bold;text-align:center;vertical-align:top}
                        .tg .tg-iucd{border-color:inherit;font-family:"Times New Roman", Times, serif !important;text-align:left;vertical-align:top}
                        .tg .tg-0pky{border-color:inherit;text-align:left;vertical-align:top}
                    </style>

                    <table class="tg" style="undefined;table-layout: fixed; width: 658px">
                        <colgroup>
                            <col style="width: 106px" />
                            <col style="width: 119px" />
                            <col style="width: 175px" />
                            <col style="width: 73px" />
                            <col style="width: 95px" />
                            <col style="width: 90px" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="tg-mn8v">BC</th>
                                <th class="tg-mn8v">BL</th>
                                <th class="tg-mn8v">Article</th>
                                <th class="tg-mn8v">Quantité</th>
                                <th class="tg-mn8v">UdM</th>
                                <th class="tg-mn8v">Carton</th>
                            </tr>
                        </thead>
                        <tbody>

                            <t t-foreach="o.stock_picking_ids" t-as="picking">
                                <t t-foreach="picking.move_line_ids_without_package" t-as="line">
                                    <tr>
                                        <td class="tg-iucd">
                                            <t t-if="picking.sale_id">
                                                <t t-esc="picking.sale_id.name" />
                                            </t>
                                        </td>
                                        <td class="tg-0pky">
                                            <t t-esc="picking.name" />
                                        </td>
                                        <td class="tg-0pky">
                                            <t t-if="line.product_id">
                                                <t t-esc="line.product_id.name" />
                                                <t t-esc="line.product_id.diameter" />
                                                <t t-esc="line.product_id.line" />
                                            </t>
                                        </td>
                                        <td class="tg-0pky">
                                            <t t-if="line.product_uom_id">
                                                <t t-esc="line.product_uom_id.ratio" />
                                            </t>
                                        </td>
                                        <td class="tg-0pky">
                                            <t t-esc="line.qty_done" />
                                        </td>
                                        <td class="tg-0pky">
                                            <t t-if="line.carton_id">
                                                <t t-esc="line.carton_id.name" />
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>

            </t>
        </t>
    </template>
</odoo>