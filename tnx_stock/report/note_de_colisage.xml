<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="note_de_colisage_paperformat" model="report.paperformat">
        <field name="name">[TNX] Note de colisage </field>
        <field name="default" eval="False" />
        <field name="disable_shrinking" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="dpi">96</field>
    </record>
    <record id="action_tnx_package_report" model="ir.actions.report">
        <field name="name">Note de colisage</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_stock.tnx_package_report</field>
        <field name="report_file">tnx_stock.tnx_package_report</field>
        <field name="binding_model_id" ref="stock.model_stock_picking" />
        <field name="binding_model_id" eval="False" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="tnx_stock.note_de_colisage_paperformat" />
    </record>
    <!-- Template Note de colisage -->
    <template id="tnx_package_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="header">
                        <img src="/tnx_stock/static/src/img/tanacrex.png" style="height:40px;width:30%;" />
                    </div>
                    <br />
                    <div class="text-center">
                        <h2 class="font-weight-bold"> NOTE DE COLISAGE </h2>
                        <h4> Nom du client</h4>
                        <h5> Facture N° 05649 </h5>
                        <span> 2 Cartons contentant 150000 pièces de boutons </span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-9">
                            <span>
                                <u> Poids brut :</u>
                                42 kg
                            </span>
                        </div>
                        <div class="col-3">
                            <u> Poids net :</u>
                            75 kg
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row  text-center">
                        <div class="col-3">
                            <span>Nom de l'article</span>
                        </div>
                        <div class="col-3">
                            <span>Nom du colis</span>
                        </div>
                        <div class="col-3">
                            <span>Quantité fait</span>
                        </div>
                        <div class="col-3">
                            <span>unités de mesure</span>
                        </div>
                    </div>
                    <t t-foreach="docs" t-as="o">
                        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                        <t t-if="not o" t-set="o" t-value="o" />
                        <t t-if="not company">
                            <t t-if="company_id">
                                <t t-set="company" t-value="company_id" />
                            </t>
                            <t t-elif="o and 'company_id' in o">
                                <t t-set="company" t-value="o.company_id.sudo()" />
                            </t>
                            <t t-else="else">
                                <t t-set="company" t-value="res_company" />
                            </t>
                        </t>
                        <div>
                            Bon de livraison N° :
                            <u class="text-center">
                                <span t-esc="o.name" />
                            </u>
                            <br />
                            <t t-set="lines" t-value="o.move_ids_without_package.filtered(lambda x: x.product_id)" />
                            <t t-foreach="lines" t-as="move">
                                <div class="row text-center">
                                    <div class="col-3">
                                        <span t-field="move.product_id.name" />
                                    </div>
                                    <div class="col-3">
                                        <span t-field="move.product_packaging_id.name" />
                                    </div>
                                    <div class="col-3">
                                        <span t-field="move.quantity_done" />
                                    </div>
                                    <div class="col-3">
                                        <span t-field="move.product_uom" />
                                    </div>
                                </div>
                            </t>
                        </div>
                        <br />
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>