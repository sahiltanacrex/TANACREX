<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="report_product_inherit" inherit_id="product.report_simple_label2x7">
            <xpath expr="//div[hasclass('o_label_full')]" position="replace">
                <div class="o_label_full" t-att-style="table_style+'width:70mm !important; height: 40mm !important'">
                    <div class="o_label_name" style="width:100%; overflow: hidden;">
                        <div style="float: left;">
                            <img src='/web/binary/company_logo' style="height: 30px; width: 100px" alt="Logo" />
                        </div>
                        <div>
                            <table style="margin-left:110px;text-align:center;font-size:10px;line-height: 1px;">
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>
                                                BOUTONS &amp; ETIQUETTES
                                            </b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Tel:(261)34 02 441 35</td>
                                    </tr>
                                    <tr>
                                        <td>contact@tanacrex.com</td>
                                    </tr>
                                    <tr>
                                        <td>www.tanacrex.com</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <div style="height:80%;width:100%;font-size:14px">
                        <!-- <div class="text-center o_label_left_column">
                            <span class="text-nowrap" t-field="product.default_code" />
                            <t t-if="barcode">
                                <div t-out="barcode" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}" />
                                <span class="text-center" t-out="barcode" />
                            </t>
                        </div> -->
                        <div style="width:100%;height:80%;">
                            <table style="width:100%;height:80%;border:1px solid;margin-bottom:10px;boder-collapse:collapse:border:1px solid">
                                <tbody style="font-size: 10px">
                                    <tr>
                                        <td colspan="2" style="border:1px solid">Po # AI22105636</td>
                                    </tr>
                                    <tr>
                                        <td style="border:1px solid; width:50%">
                                            <b>ART:</b>
                                            <t t-esc="product.name" />
                                        </td>
                                        <td style="border:1px solid">
                                            <b>QTY:</b>
                                            <span t-field="product.qty_available" t-options="{'widget': 'float', 'precision': 0}"/> 
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border:1px solid">
                                            <b>SIZE:</b>
                                            <t t-esc="product.line" />
                                            <span>L</span>
                                        </td>
                                        <td style="border:1px solid"><b>WEIGHT:</b> <span t-field="product.weight"/> kg</td>
                                    </tr>
                                </tbody>
                            </table>
                            <!-- <div class="o_label_extra_data">
                                <t t-out="extra_html" />
                            </div>
                            <t t-if="product.is_product_variant">
                                <strong class="o_label_price" t-field="product.lst_price" t-options="{'widget': 'monetary', 'label_price': True}" />
                            </t>
                            <t t-else="">
                                <strong class="o_label_price" t-field="product.list_price" t-options="{'widget': 'monetary', 'label_price': True}" />
                            </t> -->
                        </div>
                        <div class="o_label_clear"></div>
                    </div>
                </div>
            </xpath>

        </template>
    </data>
</odoo>