<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_tree_inherit" model="ir.ui.view">
        <field name="name">stock.stock.picking.tree.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_assign']" position="after">
                <button name="report_colisages" type="object" string="Colisage"/>
            </xpath>
            <field name="partner_id" position="attributes">
                <attribute name="string">Client</attribute>
            </field>
            <field name="partner_id" position="after">
                <field name="bc_client" string="BC Client"/>
            </field>
        </field>
    </record>
    <record id="stock_move_line_inherit_tree_view" model="ir.ui.view">
        <field name="name">stock.move.line.view.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_uom_qty']" position="attributes">
                <attribute name="string">Réservé Udm</attribute>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="attributes">
                <attribute name="string">Fait Udm</attribute>
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='product_uom_qty']" position="before">
                <field name="unit_reserv"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="unit_done"/>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="carton_id" string="Numéro de carton" options="{'no_create_edit': True}"/>
                <field name="colisage"/>
            </xpath>
        </field>
    </record>
    <record id="view_picking_form_inherit_nexource" model="ir.ui.view">
        <field name="name">stock.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_open_label_layout']" position="after">
                <button string="Imprimer les étiquettes" type="object" name="action_open_label_custom"/>
            </xpath>
            <xpath expr="//header/button[@name='action_open_label_layout']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header/button[@name='346']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="bc_client"/>
            </xpath>
        </field>
    </record>
</odoo> 