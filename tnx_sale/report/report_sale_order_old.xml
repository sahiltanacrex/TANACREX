<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="tnx_sale_order" model="ir.actions.report">
        <field name="name">Sale order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_sale.tnx_sale_order</field>
        <field name="report_file">tnx_sale.tnx_sale_order</field>
        <field name="attachment_use" eval="True" />
    </record>

    <record id="paperformat_sale_summary_report" model="report.paperformat">
        <field name="name">Sale Summary</field>
        <field name="default" eval="False" />
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">28</field>
        <field name="margin_right">7</field>
        <field name="margin_left">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>

    <record id="tnx_sale.tnx_sale_order" model="ir.actions.report">
        <field name="paperformat_id" ref="tnx_sale.paperformat_sale_summary_report" />
    </record>

    <!-- template tsiky  -->
    <template id="tnx_sale_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />

                <t t-if="not o" t-set="o" t-value="o" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <div class="header" style="border-bottom: 1px solid black;">
                    <!-- TODO here we can create header -->
                </div>
                <div class="article mt0 o_report_layout_standard" style="font-size:12px">
                    <div style="width: 100%;text-align:center;">
                        <h2 class="mt16">
                            <span>BC Client:</span>
                            <span t-field="o.sale_order_partner" />
                        </h2>

                    </div>
                    
                    <!-- TODO here for custom body -->
                    <h2 class="mt16">
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="o.state not in ['draft','sent']">Bon de commande # </span>
                            <span t-if="o.state in ['draft','sent']">Devis # </span>
                        </t>
                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Pro-Forma Invoice # </span>
                        </t>
                        <span t-field="o.name" />
                    </h2>

                    <div class="row mt32 mb32" id="informations">
                        <div t-if="o.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                            <strong>Your Reference:</strong>
                            <p class="m-0" t-field="o.client_order_ref" />
                        </div>
                        <div t-if="o.date_order and o.state not in ['draft','sent']"
                            class="col-auto col-3 mw-100 mb-2">
                            <strong>Order Date:</strong>
                            <p class="m-0" t-field="o.date_order" />
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2">
                            

                            <strong>
                                Client:
                                <span t-field="o.partner_id.name" />
                            </strong>
                            <br/>
                            <span>
                                NIF:<span t-field="o.partner_id.nif" />
                                <br />

                                STAT:<span t-field="o.partner_id.stat" />
                                <br />

                                RCS:<span t-field="o.partner_id.rcs" />
                            </span>
                        </div>
                        <div t-if="o.validity_date and o.state in ['draft', 'sent']"
                            class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                            <strong>Expiration:</strong>
                            <p class="m-0" t-field="o.validity_date" />
                        </div>
                        <div t-if="o.user_id.name" class="col-auto col-3 mw-100 mb-2">
                            <strong>Quotation Date:</strong>
                            <p class="m-0" t-field="o.date_order" t-options='{"widget": "date"}' />
                            <strong>Temps de livraison:</strong>
                            <p class="m-0" t-field="o.delivery_time" t-options='{"widget": "date"}' />
                            <strong>Durée de production:</strong>
                            <p class="m-0" t-field="o.production_duration" t-options='{"widget": "date"}' />
                        </div>
                    </div>

                    <table style="width: 100%; border: 1px solid;border-collapse: collapse;">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr>
                                <th  class="text-left" style="border: 1px solid;">Description</th>
                                <th class="text-left" style="border: 1px solid;">Diamètre</th>
                                <th class="text-right" style="border: 1px solid;">Quantity</th>
                                <th class="text-right" style="border: 1px solid;">Unit Price</th>
                                <th style="border: 1px solid;" t-if="display_discount" class="text-right"
                                    groups="product.group_discount_per_so_line">
                                    <span>Disc.%</span>
                                </th>
                                <th style="border: 1px solid;" class="text-right">Taxes</th>
                                <th style="border: 1px solid;" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody >

                            <t t-set="current_subtotal" t-value="0" />

                            <t t-foreach="o.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included" />

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td style="border: 1px solid;" name="td_name">
                                            <span t-field="line.name" />
                                        </td>
                                        <td style="border: 1px solid;" name="td_diameter">
                                            <span t-field="line.product_id.diameter" />
                                        </td>
                                        <td name="td_quantity" style="border: 1px solid;" class="text-right">
                                            <span t-field="line.product_uom_qty" />
                                            <span t-field="line.product_uom" />
                                        </td>
                                        <td name="td_priceunit" style="border: 1px solid;" class="text-right">
                                            <span t-field="line.price_unit" />
                                        </td>
                                        <td t-if="display_discount" style="border: 1px solid;" class="text-right"
                                            groups="product.group_discount_per_so_line">
                                            <span t-field="line.discount" />
                                        </td>
                                        <td name="td_taxes" style="border: 1px solid;" class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))" />
                                        </td>
                                        <td name="td_subtotal" style="border: 1px solid;"
                                            class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included" />
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td name="td_section_line" colspan="99">
                                            <span t-field="line.name" />
                                        </td>
                                        <t t-set="current_section" t-value="line" />
                                        <t t-set="current_subtotal" t-value="0" />
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99">
                                            <span t-field="line.name" />
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td name="td_section_subtotal" style="border: 1px solid;" colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}' />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total" style="margin-top: 20px;">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <!-- Tax totals -->
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)" />
                                    <t t-call="account.document_tax_totals" />
                                </table>
                            </div>
                        </div>
                    </div>

                    <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;" />
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="o.signed_by" />
                        </div>
                    </div>

                </div>
                <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            <div>
                                <span t-esc="company.phone" />
                                <span t-esc="company.website" />

                            </div>
                            <ul class="list-inline">
                                <li class="list-inline-item">Page:</li>
                                <li class="list-inline-item">
                                    <span class="page" />
                                </li>
                                <li class="list-inline-item">/</li>
                                <li class="list-inline-item">
                                    <span class="topage" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </t>

        </t>
    </template>


</odoo>