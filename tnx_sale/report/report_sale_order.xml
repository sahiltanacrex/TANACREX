<odoo>
    <template id="report_sale_order_inherit" inherit_id="sale.report_saleorder_document">
        <!-- customer informations -->
        <xpath expr="//div[hasclass('page')]" position="before">
            <div style="width:100%;">
                <br/>
                <div style="margin-left:503px;">
                    <div>
                        <strong>NIF:</strong>
                        <span t-esc="doc.partner_id.nif"/>
                    </div>
                    <div>
                        <strong>STAT:</strong>
                        <span t-esc="doc.partner_id.stat"/>
                    </div>
                    <div>
                        <strong>CIF:</strong>
                        <span t-esc="doc.partner_id.cif"/>
                    </div>
                    <div>
                        <strong>RCS:</strong>
                        <span t-esc="doc.partner_id.rcs"/>
                    </div>
                </div>
            </div>
        </xpath>
        <!-- bc client -->
        <xpath expr="//table[hasclass('table')]//thead//tr//th[3]" position="replace">
            <th name="th_priceunit" class="text-right">Prix / Udm</th>
        </xpath>

        <xpath expr="//table[hasclass('table')]//thead//tr//th[3]" position="after">
            <th name="th_priceunit" class="text-right" t-if="doc.partner_id.partner_type != 'vl'">UdM</th>
        </xpath>
        <xpath expr="//table[hasclass('table')]//thead//tr//th[2]" position="replace">
            <th name="th_priceunit" class="text-right">Quantit√© unitaire</th>
        </xpath>
        <xpath expr="//table[hasclass('table')]//thead//tr//th[6]" position="after">
            <th name="th_dev_price" class="text-right">Frais de developpement</th>
        </xpath>
        <xpath expr="//table[hasclass('table')]//thead//tr//th[6]" position="after">
            <t t-if="doc.partner_id.partner_type == 'ex'">
                <th name="th_dev_price" class="text-right">HS CODE</th>
            </t>
        </xpath>
        <xpath expr="//table[hasclass('table')]//tbody//tr//td[2]" position="replace">
            <td name="td_quantity" class="text-right">
                <span t-field="line.unit_qty"/>
            </td>
        </xpath>
