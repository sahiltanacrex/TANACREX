                <span t-field="line.product_uom"/>
            </td>
        </xpath>
        <xpath expr="//table[hasclass('table')]//tbody//tr//td[6]" position="after">
            <td name="td_quantity" class="text-right">
                <span t-field="line.development_expenses"/>
            </td>
        </xpath>
        <xpath expr="//table[hasclass('table')]//tbody//tr//td[6]" position="after">
            <t t-if="doc.partner_id.partner_type == 'ex'">
                <td name="td_quantity" class="text-right">
                    <span t-field="line.product_id.hs_code"/>
                </td>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('page')]//h2[hasclass('mt16')]" position="replace">
            <h2 class="mt16">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Bon de commande</span>
                    <span t-if="doc.state in ['draft','sent']">Devis</span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Facture proforma</span>
                </t>
                <!-- <span t-field="doc.name" /> -->
                <span t-field="doc.sale_order_partner"/>
            </h2>
        </xpath>
        <!-- Temps de livraison -->
        <xpath expr="//div[@id='informations']//div[3]" position="after">
            <div class="col-auto col-3 mw-100 mb-2">
                <strong>Indicatif de livraison:</strong>
                <p class="m-0" t-field="doc.delivery_time"/>
                <!-- <p class="m-0" t-field="doc.delivery_time" t-options='{"widget": "date"}' /> -->
            </div>
            <div class="col-auto col-3 mw-100 mb-2">
                <strong>Indicatif de fabrication:</strong>
                <p class="m-0" t-field="doc.production_duration"/>

            </div>
        </xpath>
        <!-- update table -->
        <xpath expr="//div[hasclass('page')]//table[1]//th[@name='th_description']" position="before">
            <th name="th_image" class="text-left">Image</th>
        </xpath>
        <xpath expr="//div[hasclass('page')]//table[1]//td[1]" position="before">
            <td name="td_image">
                <t t-if="line.product_id.image_1920">
                    <img t-att-src="image_data_uri(line.product_id.image_1920)"
                         style="max-height: 4cm; max-width: 4cm;"/>
                </t>
                <t t-else=""></t>
            </td>
        </xpath>
        <xpath expr="//span[@t-field='doc.payment_term_id.note']" position="before">
            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                <div class="row">
                    <div class="col-12">
                        <span t-esc="doc.currency_id.amount_to_text(doc.amount_total)"
                              style="font-size: 16px;font-weight: bold;"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <span>Poids approximatif : </span> <span t-esc="doc.poids_en_kg"></span> <span> Kg</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <span>Nombre de carton : </span> <span t-esc="doc.box_qty"></span>
                    </div>

                </div>
            </t>
        </xpath>


    </template>
    <template id="report_saleorder_pro_forma_tnx" inherit_id="sale.report_saleorder_pro_forma">
        <xpath expr="//t[@t-call='web.html_container']" position="replace">
            <t t-call="web.html_container">
                <t t-set="is_pro_forma" t-value="True"/>
                <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-call="tnx_sale.report_saleorder_document_proforma" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </xpath>

    </template>
