<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <template id="report_sale_order_inherit" inherit_id="sale.report_saleorder_document">
        
        <!-- customer informations -->
        <xpath expr="//div[hasclass('page')]" position="before">
            <div style="width:100%;">
                <div style="margin-left:503px;">
                    <div>
                        NIF:
                        <span t-esc="doc.partner_id.nif" /> 
                    </div>
                    <div>
                        STAT:
                        <span t-esc="doc.partner_id.stat" />
                    </div>
                    <div>
                        CIF:
                        <span t-esc="doc.partner_id.cif" />
                    </div>
                    <div>
                        RCS:
                        <span t-esc="doc.partner_id.rcs" />
                    </div>
                </div>
            </div>
        </xpath>
        <!-- bc client -->
        <xpath expr="//table[hasclass('table')]//thead//tr//th[3]" position="replace">
            <th name="th_priceunit" class="text-right">Prix unitaire</th>
        </xpath>
        <xpath expr="//table[hasclass('table')]//thead//tr//th[3]" position="after">
            <th name="th_priceunit" class="text-right">UdM</th>
        </xpath>    
        <xpath expr="//table[hasclass('table')]//thead//tr//th[2]" position="replace">
            <th name="th_priceunit" class="text-right">Quantité unitaire</th>
        </xpath>
        <xpath expr="//table[hasclass('table')]//tbody//tr//td[2]" position="replace">
            <td name="td_quantity" class="text-right">
                <span t-field="line.product_uom_qty"/>
            </td>
        </xpath>
        <xpath expr="//table[hasclass('table')]//tbody//tr//td[3]" position="after">
            <td name="td_quantity" class="text-right">
                <span t-field="line.product_uom"/>
            </td>
        </xpath>

        <xpath expr="//div[hasclass('page')]//h2[hasclass('mt16')]" position="replace">
            <h2 class="mt16">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Bon de commande # </span>
                    <span t-if="doc.state in ['draft','sent']">Devis # </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice # </span>
                </t>
                <!-- <span t-field="doc.name" /> -->
                <span t-field="doc.sale_order_partner" />
            </h2>
        </xpath>

        <!-- Temps de livraison -->
        <xpath expr="//div[@id='informations']//div[3]" position="after">
            <div class="col-auto col-3 mw-100 mb-2">
                <strong>Temps de livraison:</strong>
                <p class="m-0" t-field="doc.delivery_time"  />
                <!-- <p class="m-0" t-field="doc.delivery_time" t-options='{"widget": "date"}' /> -->

            </div>
            <div class="col-auto col-3 mw-100 mb-2">
                <strong>Durée de production:</strong>
                <p class="m-0" t-field="doc.production_duration"  />

            </div>
        </xpath>

        <!-- update table -->
        <xpath expr="//div[hasclass('page')]//table[1]//th[@name='th_description']" position="before">
            <th name="th_image" class="text-left">Image</th>
        </xpath>
        <xpath expr="//div[hasclass('page')]//table[1]//td[1]" position="before">
            <td name="td_image">
                <t t-if="line.product_id.image_1920">
                    <img t-att-src="image_data_uri(line.product_id.image_1920)" style="max-height: 4cm; max-width: 4cm;" />
                    
                </t>
                <t t-else="">
                </t>
            </td>
        </xpath>

        <!-- TODO:if tanacrex want diameter, lenght, width, surface. it is in the product template informations -->

        <!-- <xpath expr="//div[hasclass('page')]//table[1]//th[@name='th_description']" position="after">
            <th name="th_mensuration" class="text-left">Mensuration</th>
        </xpath>
        <xpath expr="//div[hasclass('page')]//table[1]//td[1]" position="before">
            <td name="td_mensuration">
            </td>
        </xpath> -->




    </template>


</odoo>