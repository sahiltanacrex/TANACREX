<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <data>
        <record id="new_send_email_bat" model="mail.template">

            <field name="name">Send mail bat</field>

            <field name="email_from">{{ (user.email_formatted or object.user_id.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>

            <field name="subject">BAT for {{ object.name }} - {{ object.bat_date }}  {{ object.partner_id.id }} - {{ object.customer_reference }}</field>



            <field name="model_id" ref="product.model_product_template"/>

            <field name="auto_delete" eval="True"/>

            <field name="body_html" type="html">

                <h1>
                    <span>ATTN </span>:
                    <strong t-out="object.partner_id.name or ''"/>
                </h1>
                <span>Dear Sir/Madam,</span><br></br>
                <span>Please find attached the artwork for approval :</span>
                <ul>
                    <li>
                        <span>
                            <u>Article :</u>
                        </span>
                        <span t-out="object.name or ''"/>
                    </li>
                    <li>
                        <span>
                            <u>Customer :</u>
                        </span>
                        <span t-out="object.partner_id.name or ''"/>
                    </li>
                    <li>
                        <span>
                            <u>Purchaser :</u>
                        </span>
                        <span t-out="object.donneur_ordre.name or ''"/>
                    </li>
                    <li>
                        <span>
                            <u>PO Number :</u>
                        </span>
                        <span t-out="object.customer_reference or ''"/>
                    </li>
                    <li>
                        <span>
                            <u>Dimension :</u>
                        </span>

                        <span t-out="object.dimension or ''"/>

                    </li>
                    <li>
                        <span>
                            <u>Action required :</u>
                        </span>
                        <span>
                            Signature of attached document
                        </span>
                    </li>

                </ul>
                <p>
                    Please validate and return the document signed and dated.
                    <br/>
                    Best Regards,
                    <br/>
                    <t t-esc="object.env.user.name"></t>,

                </p>

            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
        </record>
    </data>


</odoo>