<odoo>
    <!-- must add noupdate="1" in send mail -->
    <data noupdate="1">
        <record id="send_mail_bat" model="mail.template">

            <field name="name">Any String</field>

            <field name="email_from">{{ (user.email_formatted or object.user_id.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>

            <field name="subject">BAT</field>

            <!-- <field name="email_to">{{ object.partner_id.id }}</field> -->


            <field name="model_id" ref="product.model_product_template"/>

            <field name="auto_delete" eval="True"/>

            <field name="body_html" type="html">

                <h1>
                    Cher
                    <strong t-out="object.partner_id.name or ''"/>
