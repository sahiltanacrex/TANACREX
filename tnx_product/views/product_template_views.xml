<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_material_form_view" model="ir.ui.view">
            <field name="name">product_material.form</field>
            <field name="model">product.material</field>
            <field name="arch" type="xml">
                <form string="product_template">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_type"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_material_tree_view" model="ir.ui.view">
            <field name="name">product.material.tree</field>
            <field name="model">product.material</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="product_type"/>
                </tree>
            </field>
        </record>

        <record id="product_template_search_view" model="ir.ui.view">
            <field name="name">product.material.search</field>
            <field name="model">product.material</field>
            <field name="arch" type="xml">
                <search string="Product material search">
                    <group expand="1" string="Group By">
                        <filter string="Type" name="product_type" domain="[]"
                                context="{'group_by':'product_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_product_material" model="ir.actions.act_window">
            <field name="name">PRODUCT MATERIAL</field>
            <field name="res_model">product.material</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_material_tree_view"/>
        </record>
        <menuitem id="product_material_menu" parent="sale.product_menu_catalog" action="action_product_material"/>

    </data>
</odoo>