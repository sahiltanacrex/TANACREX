<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- must add noupdate="1" in send mail -->
    <data>
        <record id="new_send_mail_order_manufacture_inherit" model="mail.template">
            <field name="name">Manufacture Order: Send by email</field>
            <field name="email_from">{{ (user.email_formatted or object.user_id.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="subject">Manufacturing Status [{{ object.name }}] - [{{object.product_id.name}}] | [{{object.partner_id.name}}] - [{{object.bc_client}}]</field>
            <field name="model_id" ref="mrp.model_mrp_production" />
            <field name="body_html" type="html">
                <p>
                    ATTN :
                    <t t-if="object.partner_id.parent_id">
                        <t t-out="object.partner_id.name or ''">Brandon Freeman</t> (<t t-out="object.partner_id.parent_id.name or ''">Azure Interior</t>),
                    </t>
                    <t t-else="">
                        <t t-out="object.partner_id.name or ''">Brandon Freeman</t>,
                    </t>
                </p>
                <p>
                    Dear Sir/Madam,
                </p>
                <p>
                    We would like to hereby notify you the manufacturing status of your order:
                </p>
                <p>
                    <ul style="margin:0px 0 12px 0;box-sizing:border-box;">
                        <li>
                            <u>Manufacturing Order :</u><span t-out="object.name or ''"></span>
                        </li>
                        <li>
                            <u>Article :</u><span t-out="object.product_id.name or ''"></span>
                        </li>
                        <li>
                            <u>Customer :</u><span t-out="object.partner_id.name or ''"></span>
                        </li>
                        <li>
                            <u>PO Number :</u><span t-out="object.bc_client or ''"></span>
                        </li>
                        <li>
                            <u>Dimension :</u><span t-out="object.dimension or ''"></span>
                        </li><br/><br/>
                        <li>
                            <u>Completion :</u><span t-out="object.advancements or 'O%'"></span>.
                        </li>
                    </ul>
                </p>
                <p>
                    Best Regards,
                </p>
                <t t-if="object.user_id.signature">
                    <br />
                    <t t-out="object.user_id.signature or ''">--<br/>Mitchell Admin</t>
                </t>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>