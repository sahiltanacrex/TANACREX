<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- must add noupdate="1" in send mail -->
    <data noupdate="0">
        <record id="send_mail_order_manufacture" model="mail.template">
            <field name="name">Manufacture Order</field>
            <field name="email_from">{{ (user.email_formatted or object.user_id.email_formatted) }}</field>
            <field name="partner_to">{{ ctx['mail_partner_id'] }}</field>
            <field name="subject">{{ ctx['subject'] }}</field>
            <!-- <field name="email_to">{{ object.partner_id.id }}</field> -->
            <field name="model_id" ref="tnx_production.model_mrp_production" />
            <field name="auto_delete" eval="True" />
            <field name="body_html" type="html">
                <p>
                    Bonjour
                </p>
                <p>
                    Par la présente, nous souhaitons vous notifier que la production de votre commande : n°
                    <span t-out="ctx['order_origin'] or ''" />
                    est de
                    <span t-out="ctx['developments_states'] or ''" />
                </p>
                <p>
                    Bien à vous,
                </p>
                <table>
                    <tr>
                        <td style="border-right: 1px solid black">
                            <span class="small">
                                ${object.env.company.partner_id.name}
                            </span>
                        </td>
                        <td style="vertical-align: center" rowspan="2">
                            <img src=" data:image/png;base64, ${object.env.company.logo}" height="50px" width="75px"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="border-right: 1px solid black">
                            <span class="small">
                                ${object.env.company.phone}<br/>
                                ${object.env.company.street}<br/>
                                ${object.env.company.street2}, ${object.env.company.city}, ${object.env.company.zip}<br/>
                            </span>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
    </data>
</odoo>