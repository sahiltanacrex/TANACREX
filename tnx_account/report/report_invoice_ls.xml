<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="invoice_ls" model="ir.actions.report">
        <field name="name">Invoice (LS)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_account.report_invoice_ls</field>
        <field name="report_file">tnx_account.report_invoice_ls</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="model_account_move" />
    </record>

    <record id="paperformat_sale_summary_report" model="report.paperformat">
        <field name="name">Sale Summary</field>
        <field name="default" eval="False" />
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">28</field>
        <field name="margin_right">7</field>
        <field name="margin_left">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">5</field>
        <field name="dpi">90</field>
    </record>

    <record id="tnx_account.invoice_ls" model="ir.actions.report">
        <field name="paperformat_id" ref="tnx_account.paperformat_sale_summary_report" />
    </record>

    <!-- get old  -->
    <template id="report_invoice_ls">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-if="not o" t-set="o" t-value="o" />
                <!-- ####odoo defaults#### -->
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>

                <div class="header">
                    <!-- TODO here we can create header -->
                </div>
                <t t-if="o.partner_id.partner_type == 'ls'">
                    <div class="article mt0 o_report_layout_standard" style="font-size:12px">
                        <div class="header_body">
                            <!-- TODO create div for the top for information and image company -->
                            <div class="body_header">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-xs-6">

                                            <img t-if="company.logo" style="max-height:80px" t-att-src="image_data_uri(company.logo)" />
                                        </div>
                                        <div class="col-xs-6 " style="margin-left:300px; text-align:center">
                                            <table style="width:100%;">
                                                <tbody>
                                                    <tr>
                                                        <td colspan="2" style="font-weight:bold;font-size:15px;">Manufacturing Buttons and Labels since 1983</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <div>
                                                STAT:
                                                <span t-esc="company.stat" />
                                            </div>
                                            <div>
                                                NIF:
                                                <span t-esc="company.nif" />
                                            </div>
                                            <div>
                                                <span>
                                                    Lot 18 D Imerinafovoany
                                                </span>
                                            </div>
                                            <div>
                                                <span>
                                                    B.p.:11064 - tel.:
                                                    <span t-esc="company.phone" />
                                                </span>
                                            </div>
                                            <div>
                                                <span>
                                                    e-mail:contact@tanacrex.com
                                                </span>
                                            </div>
                                            <div>
                                                ANTANANARIVO -
                                                <b>MADAGASCAR</b>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div style="margin-top:20px">
                                <table style="width:100%">
                                    <tbody>
                                        <tr>
                                            <td style="width:10%">N° invoice :</td>
                                            <td>
                                                <span t-esc="o.name_bis" />
                                            </td>
                                            <td style="width:20%">Customer:</td>
                                            <td>
                                                <span t-esc="o.partner_id.name" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Reference:</td>
                                            <td>
                                                <span t-esc="o.seq_bis" />
                                            </td>
                                            <td>Billing address:</td>
                                            <td>
                                                <t t-if="o.partner_id.street">
                                                    <span t-esc="o.partner_id.street" />
                                                </t>
                                                <t t-if="o.partner_id.street2">
                                                    <span>,</span>
                                                    <span t-esc="o.partner_id.street2" />
                                                </t>
                                                <t t-if="o.partner_id.city">
                                                    <span>,</span>
                                                    <span t-esc="o.partner_id.city" />

                                                </t>
                                                <t t-if="o.partner_id.state_id">
                                                    <span>,</span>
                                                    <span t-esc="o.partner_id.state_id.name" />
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div style="margin-top:20px">
                                <table style="width:100%">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b>Date of invoice:</b>

                                                <span t-esc="o.invoice_date" />
                                            </td>
                                            <td>
                                                <b>Due date:</b>

                                                <span t-esc="o.invoice_date_due" />
                                            </td>
                                            <!-- <td>
                                                <b>Origine:</b>
    
                                                <span t-esc="o.origin_tnx" />
                                            </td> -->
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div style="margin-top:20px">
                                <table class="table " style="width:100%;">
                                    <tbody>
                                        <thead class="thead-light">
                                            <tr>
                                                <th style=" font-size:13px">PO customer</th>
                                                <th style=" font-size:13px">Delivery ship</th>
                                                <!-- <th style=" font-size:13px">HS Code</th> -->
                                                <th style=" font-size:13px">Article</th>
                                                <th style=" font-size:13px">Type of product</th>
                                                <th style=" font-size:13px">Customer reference</th>
                                                <th style=" font-size:13px">Quantity</th>
                                                <th style=" font-size:13px">Unity price / 100 pcs</th>
                                                <th style=" font-size:13px">Amount</th>
                                            </tr>

                                        </thead>
                                        <t t-foreach="o.invoice_line_ids" t-as="line">
                                            <t t-set="bl_id" t-value="o.get_delivery_order_id(line.order_origin)" />
                                            <t t-foreach="bl_id" t-as="id_bl">
                                                <t t-set="bl_name" t-value="o.get_bl_name(id_bl)" />
                                                <tr>
                                                    <td>
                                                        <!-- <span t-esc="o.get_customer_order(line.order_origin)" /> -->
                                                        <span t-esc="line.order_customer" />
                                                    </td>
                                                    <td>
                                                        <span t-esc="bl_name" />
                                                    </td>
                                                    <!-- <td>
                                                        <t t-esc="line.product_id.hs_code.hs_code" />
                                                    </td> -->
                                                    <td>
                                                        <t t-esc="line.product_id.name" />
                                                    </td>
                                                    <td>
                                                        <t t-esc="line.product_id.product_type" />

                                                    </td>
                                                    <td>
                                                        <t t-esc="line.product_id.customer_reference" />

                                                    </td>
                                                    <td>
                                                        <t t-esc="line.quantity" />
                                                    </td>
                                                    <td>
                                                        <!-- prix -->
                                                        <t t-set="unit_price" t-value="line.price_subtotal * 100" />
                                                        <t t-esc="unit_price" />
                                                    </td>
                                                    <td>
                                                        <t t-esc="line.price_subtotal" />
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div style="text-align:right">
                                <span>
                                    Amount HT:
                                    <span t-esc="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                </span>
                            </div>
                            <div style="text-align:right">
                                <span>Approved this Invoice for the sum of:</span>
                                <t t-esc="o.currency_id.amount_to_text(o.amount_total)" />
                            </div>
                            <t t-if="o.delivery_adress">
                                <div>
                                    <b>
                                        <span>Delivery address: </span>
                                    </b>
                                    <t t-esc="o.delivery_adress" />

                                </div>
                            </t>


                            <t t-if="o.bank_company_ids">
                                <div style="font-size:13px;margin-top:20px">
                                    <span>Account N°: </span>
                                    <t t-set="bank_info" t-value="o.get_bank(o.bank_company_ids,o.currency_id.id)" />
                                    <span t-esc="bank_info" />
                                </div>
                            </t>
                        </div>
                    </div>
                    <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                        <div class="row text-center">
                            <div class="col col-12 text-center">
                                <div>
                                    <span>
                                        All banking charges of foreign bank must be paid by the buyer, including correspondant reimbursing bank charges, commissions, faxes and postage
                                    </span>
                                </div>
                                <ul class="list-inline">
                                    <li class="list-inline-item">Page:</li>
                                    <li class="list-inline-item">
                                        <span class="page" />
                                    </li>
                                    <li class="list-inline-item">/</li>
                                    <li class="list-inline-item">
                                        <span class="topage" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <span>
                        This invoice is not an LS invoice
                    </span>
                </t>
            </t>

        </t>
    </template>


</odoo>