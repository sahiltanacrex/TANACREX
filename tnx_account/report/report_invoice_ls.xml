<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="invoice_ls" model="ir.actions.report">
        <field name="name">Facture (LS)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_account.report_ls</field>
        <field name="report_file">tnx_account.report_ls</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="model_account_move" />
        <field name="paperformat_id" ref="tnx_base.paperformat_tanacrex_report" />
    </record>
    <template id="report_invoice_ls">
        <t t-set="o" t-value="o.with_context(lang=lang)" />
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <div class="header"></div>
        <t t-if="o.partner_id.partner_type == 'ls'">
            <div class="article mt0 o_report_layout_standard" style="font-size:14px;" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="header_body">
                    <div class="body_header">
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-6" style="width: 50%;">
                                    <img t-if="company.logo" style="max-height:80px" t-att-src="image_data_uri(company.logo)" />
                                </div>
                                <div class="col-xs-6 " style="text-align:center; width: 50%;">
                                    <div>
                                        <b>
                                            <t t-if="company.description">
                                                <t t-esc="company.description" />
                                            </t>
                                            <t t-else="">SARL
                                                    au capital de 30 000 000 AR</t>
                                        </b>
                                        <br />
                                    </div>
                                    <div>
                                        <span>STAT:</span>
                                        <span t-esc="company.stat" />
                                    </div>
                                    <div>
                                        <span>NIF:</span>
                                        <span t-esc="company.nif" />
                                    </div>
                                    <div>
                                        <span>Lot 18 D Imerinafovoany </span>
                                    </div>
                                    <div>
                                        <span>B.P.:11064 - Tél : </span>
                                        <span t-esc="company.phone or company.mobile" />
                                    </div>
                                    <div>
                                        <span>e-mail:contact@tanacrex.com</span>
                                    </div>
                                    <div>
                                        <span>
                                            ANTANANARIVO -
                                            <b>MADAGASCAR</b>
                                        </span>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-6">
                            <div style="font-size:18px; margin-top:20px">
                                <b>Facture:</b>
                                <span t-esc="o.name_bis" />
                            </div>
                            <div style="font-size:18px; margin-top:20px">
                                <b>Référence:</b>
                                <span t-esc="o.seq_bis" />
                            </div>
                            <div style="font-size:18px; margin-top:20px">
                                <b>Date de facturation:</b>
                                <span t-esc="o.invoice_date.strftime('%d/%m/%Y')" />
                            </div>
                        </div>
                        <div class="col-6" style="border: 1px solid; text-align: center;">
                            <span t-field="o.partner_id"/><br/>
                            <t t-if="o.partner_id.street">
                                <span t-field="o.partner_id.street"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.street2">
                                <span t-field="o.partner_id.street2"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.city">
                                <span t-field="o.partner_id.city"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.state_id">
                                <span t-field="o.partner_id.state_id"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.zip">
                                <span t-field="o.partner_id.zip"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.country_id">
                                <span t-field="o.partner_id.country_id"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.phone">
                                <span>Tel: </span>
                                <span t-field="o.partner_id.phone"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.nif">
                                <span>NIF: </span>
                                <span t-field="o.partner_id.nif"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.stat">
                                <span>STAT: </span>
                                <span t-field="o.partner_id.stat"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.rcs">
                                <span>RCS: </span>
                                <span t-field="o.partner_id.rcs"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.cif">
                                <span>CIF: </span>
                                <span t-field="o.partner_id.cif"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.free_val">
                                <span t-field="o.partner_id.free_val"/> <br/> 
                            </t>
                            <t t-if="o.partner_id.free_val">
                                <span>FAX: </span>
                                <span t-field="o.partner_id.fax_number"/> <br/> 
                            </t>
                        </div>
                    </div>
                    <div style="margin-top:15px; margin-bottom:15px">
                        <style type="text/css">
                            th {border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif; text-align: left; padding:5px 5px; text-align: center;}
                            table {width:100%; font-size:13px; border-collapse: collapse;}
                            
                            table td {border: 1px solid #000; border-width:1px; text-align: center; border-top:hidden; border-bottom:hidden}
                            table td:first-child {text-align: center; border-bottom:hidden}
                            table td:last-child {text-align: center;}
                        </style>
                        <br/>
                        <table>
                            <thead>
                                <t t-set="currency" t-value="o.currency_id.name"/>
                                <tr>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th><t t-esc="currency" /></th>
                                    <th><t t-esc="currency" /></th>
                                </tr>
                                <tr style="background-color: rgb(211,209,209);">
                                    <th>BC</th>
                                    <th>Bon de livraison</th>
                                    <th>Désignation</th>
                                    <th>Type</th>
                                    <!-- <th>Réference client</th> -->
                                    <th>Dimension</th>
                                    <th>Qté</th>
                                    <th>Prix Unitaire</th>
                                    <th>Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="all_type" t-value="o.get_all_type(o.invoice_line_ids)"/>
                                <t t-foreach="all_type" t-as="type">
                                    <t t-set="total_price_type" t-value="o.get_total_price_type(o.invoice_line_ids,type)"/>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <t t-set="bl_id" t-value="o.get_delivery_order_id(line.order_origin)" />
                                    <t t-foreach="bl_id" t-as="id_bl">
                                        <t t-set="bl_name" t-value="o.get_bl_name(id_bl)" />
                                        <t t-set="bl_qty_done" t-value="o.get_bl_qty_done(id_bl, line.product_id.id)" />
                                        <t t-set="bl_sub_total" t-value="o.get_bl_subtotal(bl_qty_done, line.price_unit)" />
                                        <tr>
                                            <td>
                                                <span t-esc="line.order_customer" />
                                            </td>
                                            <td>
                                                <span t-esc="bl_name" />
                                            </td>
                                            <td>
                                                <t t-esc="line.product_id.name" />
                                            </td>
                                            <td>
                                                <span t-field="line.product_id.product_type" />
                                            </td>
                                            <td>
                                                <t t-if="line.product_id.product_type == 'button'">
                                                    <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.line)"/>L
                                                </t>
                                                <t t-elif="line.product_id.product_type == 'other'">
                                                    <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.surface)"/>mm²
                                                </t>
                                                <t t-else="">
                                                    <t t-if="line.product_id.product_tmpl_id.form == 'rectangle'">
                                                        <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.length)"/>mm x <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.wide)"/>mm
                                                    </t>
                                                    <t t-elif="line.product_id.product_tmpl_id.form == 'square'">
                                                        <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.side)"/>mm x <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.side)"/>mm
                                                    </t>
                                                    <t t-else="">
                                                        <t t-esc="o.get_right_number(line.product_id.product_tmpl_id.surface)"/>mm²
                                                    </t>
                                                </t>
                                            </td>
                                            <td>
                                                <t t-esc="o.format_number_for_amount(bl_qty_done) or ''" />
                                            </td>
                                            <td style="text-align:right">
                                                <t t-if="line.product_id.is_fees == True">
                                                    <t t-esc="o.format_number_for_amount(line.price_unit)"/> <t
                                                        t-esc="o.currency_id.symbol"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="o.format_number_for_amount(line.price_unit)"/> <t
                                                        t-esc="o.currency_id.symbol"/>
                                                    / <t t-esc="line.product_uom_id.name"/>
                                                </t>
                                            </td>
                                            <td style="text-align:right">
                                                <t t-esc="o.format_number_for_amount(bl_sub_total) or ''"/> <t t-esc="o.currency_id.symbol"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                    <tr t-if="len(all_type) >= 1">
                                        <td></td> <!--style="border-right: hidden;border-top: 1px solid black;border-bottom: 1px solid black;"-->
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Sous-total</td>
                                        <td style="text-align:right">
                                            <t t-esc="o.format_number_for_amount(total_price_type)"/> <t t-esc="o.currency_id.symbol"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                    <td style="border-bottom: 1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td style="border-color: white;border-top: black;"></td>
                                    <td style="border-color: white;border-top: black;"></td>
                                    <td style="border-color: white;border-top: black;"></td>
                                    <td style="border-color: white;border-top: black;"></td>
                                    <td style="border-color: white;border-top: black;"></td>
                                    <td style="border-color: white;border-top: black;border-right: black;"></td>
                                    <td style="border-top: 1px black;border-left: 1px solid black;">Montant HT</td>
                                    <td style="border-top: 1px black;text-align:right;"><span t-esc="o.format_number_for_amount(o.amount_untaxed)"/> <t t-esc="o.currency_id.symbol"/></td>
                                </tr>
                                <tr>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;border-right: black;"></td>
                                    <td style="border-left: 1px solid black;">TVA 20%</td>
                                    <td style="text-align:right;"><span t-esc="o.format_number_for_amount(o.amount_untaxed)"/> <t t-esc="o.currency_id.symbol"/></td>
                                </tr>
                                <tr>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;"></td>
                                    <td style="border-color: white;border-right: black;"></td>
                                    <td style="border-bottom: 1px solid black;border-left: 1px solid black;">Montant TTC</td>
                                    <td style="border-bottom: 1px solid black;text-align:right;"><span t-esc="o.format_number_for_amount(o.amount_total)"/> <t t-esc="o.currency_id.symbol"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <table>

                    </table>

                    <!--<h6>
                        <div style="text-align:right">
                            <span>Montant HT:</span>
                            <span t-esc="o.format_number_for_amount(o.amount_untaxed)"/> <t t-esc="o.currency_id.symbol"/>
                        </div>
                    </h6>
                    <h6>
                        <div style="text-align:right">
                            <span>TVA 20%:</span>
                            <span t-esc="o.format_number_for_amount(o.amount_tax)"/> <t t-esc="o.currency_id.symbol"/>
                        </div>
                    </h6>
                    <h6>
                        <div style="text-align:right">
                            <span>Montant TTC:</span>
                            <span t-esc="o.format_number_for_amount(o.amount_total)"/> <t t-esc="o.currency_id.symbol"/>
                        </div>
                    </h6>-->
                    <h6>
                    <div style="text-align:right">
                        <t t-esc="o.currency_id.amount_to_text(o.amount_total).upper()" />
                    </div>
                    </h6>
                    <br/>
                    <br/>
                    <t t-if="o.delivery_adress">
                        <div class="row">

                                <span style="font-weight: bold;font-size:14px;">Adresse de livraison : </span>

                            <div class="col-7" style="text-align: center;">
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.name">
                                <span t-field="o.delivery_adress.name"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.street">
                                <span t-field="o.delivery_adress.street"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.street2">
                                <span t-field="o.delivery_adress.street2"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.city">
                                <span t-field="o.delivery_adress.city"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.state_id">
                                <span t-field="o.delivery_adress.state_id"/> &#x9; 
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.zip">
                                <span t-field="o.delivery_adress.zip"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.country_id">
                                <span t-field="o.delivery_adress.country_id"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.phone">
                                <span>Tel: </span>
                                <span t-field="o.delivery_adress.phone"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.nif">
                                <span>NIF: </span>
                                <span t-field="o.partner_id.nif"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.partner_id.stat">
                                <span>STAT: </span>
                                <span t-field="o.delivery_adress.stat"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.rcs">
                                <span>RCS: </span>
                                <span t-field="o.delivery_adress.rcs"/> &#x9;
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.cif">
                                <span>CIF: </span>
                                <span t-field="o.delivery_adress.cif"/> &#x9; 
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.partner_id.free_val">
                                <span t-field="o.delivery_adress.free_val"/> &#x9; 
                            </div>
                            <div style="white-space: nowrap; display: inline-block;" t-if="o.delivery_adress.fax_number">
                                <span>FAX: </span>
                                <span t-field="o.delivery_adress.fax_number"/> &#x9; 
                            </div>
                            </div>
                        </div><br></br>
                    </t>
                    <!--<span t-if="o.origin_sale_id.payment_method"> Paiement: </span> <span t-field="o.origin_sale_id.payment_method"/> <span t-if="o.invoice_date_due">   Date d'écheance: </span> <span t-esc="o.invoice_date_due.strftime('%d/%m/%Y')"/>-->
                            
                    <t t-if="o.bank_company_ids">
                        <div class="row">
                            <t t-foreach="o.bank_company_ids" t-as="bank">
                                <div class="col-6" style="text-align: center;">
                                    <style type="text/css">
                                        p {margin-bottom: 0em;}
                                    </style>
                                    <span t-if="o.origin_sale_id.payment_method"> Paiement: </span> <span t-field="o.origin_sale_id.payment_method"/> <span t-if="o.invoice_date_due and o.origin_sale_id.payment_method"> -- </span> <span t-if="o.origin_sale_id.payment_method" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')"/>

                                    <span style="font-weight: bold;" t-esc="bank.bank_address"/>
<!--                                    <div style="font-weight: bold;font-weight: bold;margin-top: -20px;font-size: 13px;" t-esc="bank.bank_company_line_ids[0].account_registration"/>-->
                                    <span></span><span style="font-weight: bold;" t-esc="bank.bank_company_line_ids[0].account_registration"/>

                                </div>
                            </t>
                        </div>
                    </t>
                </div>
                    <br/>
                    <div class="row text-center">
                        <div class="col col-12 text-center">
                            <span>Tous les frais bancaires de la banque étrangère doivent être payés par l'acheteur, y compris le correspondant remboursant les frais bancaires, les commissions, les fax et les frais postaux correspondants.</span>
                        </div>
                    </div>
            </div>
            
            <div class="footer o_standard_footer" style="border-top: 1px solid black; font-size:15px;">
                <div class="row text-center">
                    <div class="col col-12 text-center">
                        <ul class="list-inline">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page" />
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
        <t t-else="">
            <span>Ce n'est pas une facture LS</span>
        </t>
    </template>

    <template id="report_ls">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.sudo().lang" />
                <t t-call="tnx_account.report_invoice_ls" t-lang="lang" />
            </t>
        </t>
    </template>
</odoo>