<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <record id="invoice_vl" model="ir.actions.report">
        <field name="name">Facture (VL)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tnx_account.report_vl</field>
        <field name="report_file">tnx_account.report_vl</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="model_account_move" />
        <field name="paperformat_id" ref="tnx_base.paperformat_tanacrex_report" />
    </record>
    <template id="report_invoice_vl">
        <t t-set="o" t-value="o.with_context(lang=lang)" />
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <div class="header"></div>
        <t t-if="o.partner_id.partner_type == 'vl'">
            <div class="article mt0 o_report_layout_standard" style="font-size:14px;">
                <div class="header_body">
                    <div class="body_header">
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-6">
                                    <img t-if="company.logo" style="max-height:80px" t-att-src="image_data_uri(company.logo)" />
                                </div>
                                <div class="col-xs-6 " style="margin-left:250px; text-align:center">
                                    <div>
                                        <b>
                                            <t t-if="company.description">
                                                <t t-esc="company.description" />
                                            </t>
                                            <t t-else="">Fabricant de boutons et d'étiquettes depuis 1983</t>
                                        </b>
                                        <br />
                                    </div>
                                    <div>
                                        <span>STAT:</span>
                                        <span t-esc="company.stat" />
                                    </div>
                                    <div>
                                        <span>NIF:</span>
                                        <span t-esc="company.nif" />
                                    </div>
                                    <div>
                                        <span>Lot 18 D Imerinafovoany </span>
                                    </div>
                                    <div>
                                        <span>B.p.:11064 - Tél : </span>
                                        <span t-esc="company.phone or company.mobile" />
                                    </div>
                                    <div>
                                        <span>e-mail:contact@tanacrex.com</span>
                                    </div>
                                    <div>
                                        <span>
                                            ANTANANARIVO -
                                            <b>MADAGASCAR</b>
                                        </span>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="font-size:18px; margin-top:20px">
                        <b>Réference :</b>
                        <span t-esc="o.name_bis" />
                    </div>
                    <div class="row" style="margin-top:20px">
                        <div class="col-4">
                            <b>Numéro de compte :</b>
                            <span t-esc="o.seq_bis" />
                        </div>
                        <div class="col-4">
                            <b>
                                Client :
                                <span style="font-size: 18px" t-esc="o.partner_id.name" />
                            </b>
                        </div>
                        <div class="col-4">
                            <b>Adresse de facturation :</b>
                            <t t-if="o.partner_id.street">
                                <span t-esc="o.partner_id.street" />
                            </t>
                            <t t-if="o.partner_id.street2">
                                <span>,</span>
                                <span t-esc="o.partner_id.street2" />
                            </t>
                            <t t-if="o.partner_id.city">
                                <span>,</span>
                                <span t-esc="o.partner_id.city" />
                            </t>
                            <t t-if="o.partner_id.state_id">
                                <span>,</span>
                                <span t-esc="o.partner_id.state_id.name" />
                            </t>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <b> Date de facturation :</b>
                            <span t-esc="o.invoice_date" />
                        </div>
                        <div class="col-4">
                            <b>Date d'écheance:</b>
                            <span t-esc="o.invoice_date_due" />
                        </div>
                        <div class="col-4">
                            <b>Condition de paiement : </b>
                            <span t-if="o.invoice_payment_term_id" t-esc="o.invoice_payment_term_id.name" />
                        </div>
                    </div>
                    <div style="margin-top:15px; margin-bottom:15px">
                        <style type="text/css">
                                    td,th {border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif; text-align: left; padding:5px 5px;}
                                    table {width:100%; font-size:15px;}
                                    </style>
                        <table>
                            <thead>
                            <t t-set="currency" t-value="o.currency_id.name"/>
                                <tr t-if="currency == USD">
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th style="border: none"></th>
                                    <th><t t-esc="currency" /></th>
                                    <th><t t-esc="currency" /></th>
                                </tr>
                                <tr>
                                    <th>BON DE COMMANDE CLIENT</th>
                                    <th>BON DE LIVRAISON</th>
                                    <th>TYPE</th>
                                    <th>DIMENSION</th>
                                    <th>QUANTITE</th>
                                    <th>DESIGNATION</th>
                                    <th>PRIX UNITAIRE / UDM</th>
                                    <th>MONTANT HT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- <t t-set="val" t-value="o.get_all_order_line(o.invoice_line_ids)"/> -->
                                <t t-set="all_type" t-value="o.get_all_type(o.invoice_line_ids)"/>
                                <t t-foreach="all_type" t-as="type">
                                    <t t-set="total_price_type" t-value="o.get_total_price_type(o.invoice_line_ids,type)"/>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <!-- <t t-set="bl_id" t-value="o.get_delivery_order_id(line.order_origin)" /> -->
                                        <!-- <t t-foreach="bl_id" t-as="id_bl">
                                            <t t-set="bl_name" t-value="o.get_bl_name(id_bl)" /> -->
                                        <t t-if="line.product_id.product_type == type">
                                            <tr>
                                                <td>
                                                <t t-if="line.order_customer">
                                                    <span t-esc="line.order_customer" />
                                                </t>
                                                <t t-else="">
                                                    <span>-</span>
                                                </t>
                                                </td>
                                                <td>
                                                    <span t-esc="line.picking_name" />
                                                </td>
                                                <td>
                                                    <t t-esc="line.product_id.product_type" />
                                                </td>
                                                <td>
                                                    <t t-if="line.product_id.product_type == 'button'">
                                                        <t t-esc="line.product_id.product_tmpl_id.line"/>L
                                                    </t>
                                                    <t t-else="">
                                                    <t t-esc="line.product_id.product_tmpl_id.length"/>mm x <t t-esc="line.product_id.product_tmpl_id.height"/>mm
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-esc="line.unit_qty" />
                                                </td>
                                                <td>
                                                    <t t-esc="line.product_id.name" />
                                                </td>
                                                <td>
                                                    <t t-esc="line.price_unit_udm" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" /> / <t t-esc="line.product_uom_id.name"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                                </td>
                                            </tr>
                                            
                                        </t>
                                        <!-- </t> -->
                                    </t>
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <t t-esc="total_price_type" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                        </td>
                                    </tr>
                                </t>
                                <t t-set="total_price_type_false" t-value="o.get_total_price_type(o.invoice_line_ids, False)"/>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <!-- <t t-set="bl_id" t-value="o.get_delivery_order_id(line.order_origin)" /> -->
                                        <!-- <t t-foreach="bl_id" t-as="id_bl">
                                            <t t-set="bl_name" t-value="o.get_bl_name(id_bl)" /> -->
                                            <t t-if="line.product_id.product_type == False and line.price_unit != 0">
                                            <tr>
                                                <td>
                                                <t t-if="line.order_customer">
                                                    <span t-esc="line.order_customer" />
                                                </t>
                                                <t t-else="">
                                                    <span>-</span>
                                                </t>
                                                </td>
                                                <td>
                                                    <span t-esc="line.picking_name" />
                                                </td>
                                                <td>
                                                    <t t-esc="line.product_id.product_type" />
                                                </td>
                                                <td>
                                                    <!-- <t t-if="line.product_id.product_tmpl_id.length != 0 and line.product_id.product_tmpl_id.height != 0" t-esc="line.product_id.product_tmpl_id.length"/>mm x <t t-esc="line.product_id.product_tmpl_id.height"/>mm -->
                                                </td>
                                                <td>
                                                    <t t-esc="line.quantity" />
                                                </td>
                                                <td>
                                                    <t t-esc="line.product_id.name" />
                                                </td>
                                                <td>
                                                    <t t-esc="line.price_unit_udm" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/> 
                                                </td>
                                                <td>
                                                    <t t-esc="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                                </td>
                                            </tr>
                                            </t>
                                        <!-- </t> -->
                                    </t>
                                    <tr t-if="total_price_type_false">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <t t-esc="total_price_type_false" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                        </td>
                                    </tr>
                                    
                            </tbody>
                        </table>
                    </div>
                    <h4>
                        <div style="text-align:right">
                            <span>Montant HT:</span>
                            <span t-esc="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                        </div>
                    </h4>
                    <div style="text-align:right">
                        <span>Approuvé cette facture pour la somme de</span>
                        <t t-esc="o.currency_id.amount_to_text(o.amount_total)" />
                    </div>
                    <t t-if="o.delivery_adress">
                        <div>
                            <b>
                                <span>Adresse de livraison : </span>
                            </b>
                            <t t-esc="o.delivery_adress" />
                        </div>
                    </t>
                    <t t-if="o.bank_company_ids">
                        <div style="font-size:13px;margin-top:20px">
                            <span>N° compte: </span>
                            <t t-set="bank_info" t-value="o.get_bank(o.bank_company_ids,o.currency_id.id)" />
                            <span t-esc="bank_info" />
                        </div>
                    </t>
                </div>
            </div>
            <div class="footer o_standard_footer" style="border-top: 1px solid black; font-size:15px">
                <div class="row text-center">
                    <div class="col col-12 text-center">
                        <div>
                            <span>Tous les frais bancaires de la banque étrangère doivent être payés par l'acheteur, y compris le correspondant remboursant les frais bancaires, les commissions, les fax et les frais postaux</span>
                        </div>
                        <ul class="list-inline">
                            <li class="list-inline-item">Page:</li>
                            <li class="list-inline-item">
                                <span class="page" />
                            </li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item">
                                <span class="topage" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </t>
        <t t-else="">
            <span>Ce n'est pas une facture VL</span>
        </t>
    </template>

    <template id="report_vl">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.sudo().lang" />
                <t t-call="tnx_account.report_invoice_vl" t-lang="lang" />
            </t>
        </t>
    </template>

</odoo>