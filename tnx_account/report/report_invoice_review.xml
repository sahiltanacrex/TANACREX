<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">
            <t t-if="o.partner_id.partner_type == 'ex'">
                <t t-call="tnx_account.report_ex_document"/>
            </t>
            <t t-if="o.partner_id.partner_type == 'ls'">
                <t t-call="tnx_account.report_invoice_ls"/>
            </t>
            <t t-if="o.partner_id.partner_type == 'vl'">
                <t t-call="tnx_account.report_invoice_vl"/>
            </t>
        </xpath>
            
    </template>

</odoo>
