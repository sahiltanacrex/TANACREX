<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_bank_line_company_view" model="ir.ui.view">
            <field name="name">bank_company_form.form</field>
            <field name="model">bank.company.line</field>
            <field name="arch" type="xml">
                <form string="Price rental">
                    <sheet>
                        <group>
                            <field name="account_registration" />
                            <field name="res_currency_id" />
                            <field name="bank_id" />
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="view_bank_line_company_tree" model="ir.ui.view">
            <field name="name">bank_company.tree</field>
            <field name="model">bank.company.line</field>
            <field name="arch" type="xml">
                <tree string="Numéro de carte bancaire">
                    <field name="account_registration" />
                    <field name="res_currency_id" />
                    <field name="bank_id" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bank_company_line">
            <field name="name">Numéro de compte</field>
            <field name="res_model">bank.company.line</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{"search_default_sector_id":1,"search_default_directory_id":1}</field> -->
        </record>

        <menuitem id="bank_company_line_menu" name="Numéro de compte" action="action_bank_company_line" parent="account.menu_finance_configuration" groups="tnx_base.group_direction_tnx" />

    </data>

</odoo>