<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
    
        <record id="view_bank_company_view" model="ir.ui.view">
            <field name="name">bank_company_form.form</field>
            <field name="model">bank.company</field>
            <field name="arch" type="xml">
                <form string="Price rental">
                    <sheet>
                        <group>
                            <field name="bank" />
                        </group>
                        <notebook>
                            <page name="bank_serial_number" string="Compte banciare">
                                <div>
                                    <group>
                                        
                                        <field name="bank_company_line_ids" widget="section_and_note_one2many" mode="tree">
                                            <tree string="Numéro compte bancaire" editable="bottom">
                                                <control>
                                                    <create name="add_product_control" string="Ajouter numéro" />
                                                    <create name="add_section_control" string="Ajouter une section" context="{'default_display_type': 'line_section'}" />
                                                    <create name="add_note_control" string="Ajouter une note" context="{'default_display_type': 'line_note'}" />
                                                </control>


                                                <field name="account_registration" />
                                                <field name="res_currency_id" />
                                            </tree>
                                        </field>
                                    </group>
                                </div>

                            </page>
                        
                            <page name="bank_info" string="Informations bancaire">
                                <field name="bank_info" />
                            </page>
                            <page name="bank_address" string="Adresse de la banque">
                                <field name="bank_address" string="Adresse de la banque"/>
                            </page>
                            
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
        <record id="view_bank_company_tree" model="ir.ui.view">
            <field name="name">bank_company.tree</field>
            <field name="model">bank.company</field>
            <field name="arch" type="xml">
                <tree string="Banque">
                    <field name="bank" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bank_company">
            <field name="name">Banque</field>
            <field name="res_model">bank.company</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{"search_default_sector_id":1,"search_default_directory_id":1}</field> -->
        </record>
        
        <menuitem id="bank_company_menu" name="Banque de la compagnie" action="action_bank_company" parent="account.menu_finance_configuration" groups="tnx_base.group_direction_tnx" />

    
    </data>
    
</odoo>