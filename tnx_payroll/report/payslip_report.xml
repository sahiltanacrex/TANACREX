<odoo>
    <data>
        <template id="report_payslip_inherit" inherit_id="hr_payroll.report_payslip">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="tnx_payroll.external_layout">

                    <style type="text/css">
                        .tgv {border-collapse:collapse;border-spacing:0;}
                        .tgv td{border-color:black;border-style:solid;border-width:1px;font-family:Arial,
                        sans-serif;font-size:11px;
                        overflow:hidden;word-break:normal;padding-top: 2px; padding-bottom: 2px; padding-left: 5px;}
                        .tgv th{border-color:black;border-style:solid;border-width:1px;font-family:Arial,
                        sans-serif;font-size:11px;
                        font-weight:normal;overflow:hidden;padding:2px 2px;word-break:normal}
                        .tgv .tgv-34fe{background-color:#c0c0c0;border-color:inherit;text-align:center;}
                        .tgv
                        .tgv-zlqz{background-color:#c0c0c0;border-color:inherit;font-weight:bold;text-align:center;}
                        .tgv .tgv-0pky{border-color:inherit;text-align:left;}
                    </style>
                    <table class="tgv" style="table-layout: fixed; width: 100%;">
                        <colgroup>
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                            <col style="width: 12.5%" />
                        </colgroup>
                        <tbody>
                            <tr>
                                <td class="tgv-0pky" colspan="2" style="text-align:center; vertical-align:middle;font-weight:bold; font-size:21px;">
                                    BULLETIN DE PAIE

                                </td>
                                <td class="tgv-0pky" colspan="6">
                                    <div class="row">
                                        <div class="col-6">
                                            <span t-esc="o.company_id.name" />
                                            <!--<br/>
                                            <span t-esc="o.company_id.street + ', '+ o.company_id.zip + ' - ' + o.company_id.city"/>-->
                                            <br />
                                            <t t-if="o.company_id.street and o.company_id.zip and o.company_id.city">
                                                <span t-esc="o.company_id.street + ', '+ o.company_id.zip + ' - ' + o.company_id.city" />
                                            </t>

                                            <t t-if="o.company_id.phone">
                                                <span>Tel:</span>
                                                <span t-esc="o.company_id.phone" />
                                            </t>
                                            <t t-if="o.company_id.phone and o.company_id.mobile">
                                                <span>/</span>
                                            </t>
                                            <t t-if="o.company_id.mobile">
                                                <span t-esc="o.company_id.mobile" />
                                            </t>


                                            <t t-if="o.company_id.email">
                                                <br />
                                                <span>Mail:</span>
                                                <span t-esc="o.company_id.email" />
                                            </t>
                                            <br />
                                            <t t-if="o.company_id.nif">
                                                <span>NIF :</span>
                                                <span t-esc="o.company_id.nif" />
                                            </t>
                                            <br />
                                            <t t-if="o.company_id.stat">
                                                <span>STAT :</span>
                                                <span t-esc="o.company_id.stat" />
                                            </t>
                                        </div>
                                        <div class="col-6">
                                            <img t-att-src="image_data_uri(o.company_id.logo)" align="left" style="max-height: 100px; float:right; max-width: 200px;" />
                                        </div>
                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <td class="tgv-zlqz" colspan="2">PERIODE DE PAIE</td>
                                <td class="tgv-34fe" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">
                                        QUALIFICATION PROFESSIONNELLE
                                    </span>
                                </td>
                                <td class="tgv-34fe" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">
                                        NUMERO
                                        CNAPS
                                    </span>
                                </td>
                                <td class="tgv-34fe" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">CODE
                                        ADH OSTIE</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="tgv-0pky" colspan="2" rowspan="4">
                                    <t t-if="o.date_from and o.date_to">
                                        Du
                                        <span t-esc="o.date_from.strftime('%d/%m/%Y')" />
                                        à
                                        <span t-esc="o.date_to.strftime('%d/%m/%Y')" />
                                    </t>
                                    <t t-else=""></t>

                                </td>
                                <td class="tgv-0pky" colspan="2" rowspan="2">
                                    <span t-esc="o.contract_id.contract_type_id.name" />
                                    <span t-esc="o.contract_id.contrat_categorie" />
                                </td>
                                <td class="tgv-0pky" colspan="2" rowspan="2">
                                    <span t-esc="o.employee_id.cnaps" />
                                </td>
                                <td class="tgv-0pky" colspan="2" rowspan="2"></td>
                            </tr>
                            <tr></tr>
                            <tr>
                                <td class="tgv-34fe" colspan="6">
                                    <span style="font-weight:bold;font-style:normal">
                                        EMPLOYE(E)</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="tgv-0pky" colspan="6" rowspan="3">
                                    <span>Nom et prénom: </span>
                                    <span t-esc="o.employee_id.name" />
                                    <br />
                                    <span>Adresse: </span>
                                    <span t-esc="o.employee_id.address_home_id.street" />
                                    <br />
                                    <span>N°CIN: </span>
                                    <span t-esc="o.employee_id.identification_id" />
                                    <br />
                                    <div style="width:100%; overflow: hidden;">
                                        <div style="float: left;">
                                            <span>Poste: </span>
                                            <span t-esc="o.employee_id.job_id.name" />

                                        </div>
                                        <div style="margin-left: 250px;">

                                            <span>Lieu de travail: </span>
                                            <span t-esc="o.employee_id.work_location_id.name" />
                                        </div>
                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <td class="tgv-34fe" colspan="2">
                                    <span style="font-weight:bold">DATE DE PAIE</span>
                                </td>
                            </tr>
                            <tr>
                                <td class="tgv-0pky" colspan="2" style="text-align:center;"></td>
                            </tr>
                            <tr>
                                <td class="tgv-34fe" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">CONGES
                                        PAYES</span>
                                </td>
                                <td class="tgv-34fe">
                                    <span style="font-weight:bold;font-style:normal">
                                        Matricule</span>
                                </td>
                                <td class="tgv-34fe">
                                    <span style="font-weight:bold;font-style:normal">Date
                                        d'entrée</span>
                                </td>
                                <td class="tgv-34fe">
                                    <span style="font-weight:bold;font-style:normal">Date de
                                        sortie</span>
                                </td>
                                <td class="tgv-34fe">
                                    <span style="font-weight:bold;font-style:normal">
                                        Ancienneté</span>
                                </td>
                                <td class="tgv-34fe">
                                    <span style="font-weight:bold;font-style:normal">Age</span>
                                </td>
                                <td class="tgv-34fe">
                                    <span style="font-weight:700;font-style:normal">Date de
                                        Naissance</span>
                                </td>
                            </tr>
                            <tr>

                                <td class="tgv-0pky" colspan="2" rowspan="4">
                                    <div class="row">
                                        <div class="col-6">Periode</div>
                                        <div class="col-6">
                                            :
                                            <!-- <span t-esc="o.employee_id.allocation_display" />
                                            Jours -->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">Acquis</div>
                                        <div class="col-6">: 2.5 Jours</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">Pris</div>
                                        <div class="col-6">
                                            :
                                            <!-- <span t-esc="o.employee_id.allocation_used_display" />
                                            Jours -->
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">Restant</div>
                                        <div class="col-6">
                                            :
                                            <!-- <t t-set="foo" t-value="float(o.employee_id.allocation_display) - float(o.employee_id.allocation_used_display)" />
                                            <t t-out="foo" />
                                            Jours -->
                                        </div>
                                    </div>

                                </td>
                                <td class="tgv-0pky">
                                    <span t-esc="o.employee_id.matricule" />
                                </td>
                                <td class="tgv-0pky">
                                    <t t-if="o.contract_id.date_start">
                                        <span t-esc="o.contract_id.date_start.strftime('%d/%m/%Y')" />
                                    </t>
                                    <t t-else=""></t>

                                </td>
                                <td class="tgv-0pky">
                                    <span t-esc="o.contract_id.date_end" />
                                </td>
                                <!-- TODO: get_length_of_service -->
                                <td class="tgv-0pky">
                                    <!-- <span t-esc="o.get_age(o.contract_id.date_start,o.contract_id.date_end)" />
                                    <span>
                                    ans</span> -->
                                </td>
                                <!-- TODO: get_age -->
                                <td class="tgv-0pky">
                                    <!-- <span t-esc="o.get_age(o.employee_id.birthday,0)" />
                                    <span>ans</span> -->
                                </td>
                                <td class="tgv-0pky">
                                    <t t-if="o.employee_id.birthday">
                                        <span t-esc="o.employee_id.birthday.strftime('%d/%m/%Y')" />
                                    </t>
                                    <t t-else=""></t>

                                </td>
                            </tr>
                            <tr>
                                <td class="tgv-0pky" colspan="6" rowspan="3">
                                    <div></div>
                                    <br></br>
                                    <div style="width:100%; overflow: hidden;">
                                        <div style="float: left;">
                                            <span>
                                                Nombre de jours travaillé :
                                            </span>
                                            <!-- PUT:set number of day worked -->
                                            <span t-foreach="o.worked_days_line_ids" t-as="worked_days">
                                                <!-- <span t-esc="worked_days.code" /> -->
                                                <t t-if="worked_days.code == 'WORK100'">
                                                    <span t-esc="worked_days.number_of_days" />
                                                </t>
                                            </span>
                                        </div>
                                        <div style="margin-left: 250px;">
                                            <span>Salaire de base : </span>
                                            <!-- PUT:set number of hour on contract -->
                                            <span t-esc="'{0:,.2f}'.format(float(o.contract_id.base_salary)).replace(',', ' ')" />
                                            <span t-esc="o.currency_id.symbol" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr style="padding-top: 2px; padding-bottom: 2px;"></tr>
                            <tr style="padding-top: 2px; padding-bottom: 2px;"></tr>
                            <tr style="padding-top: 2px; padding-bottom: 2px;">
                                <td class="tgv-zlqz" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">
                                        RUBRIQUES</span>
                                </td>
                                <td class="tgv-zlqz" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">
                                        NOMBRE</span>
                                </td>
                                <td class="tgv-zlqz" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">
                                        BASE</span>
                                </td>
                                <td class="tgv-zlqz" colspan="2">
                                    <span style="font-weight:bold;font-style:normal">
                                        MONTANT</span>
                                </td>
                            </tr>
                            <t t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip)" t-as="line">
                                <tr>
                                    <td colspan="2" style="background-color:#eeece1; text-align:center; font-weight:bold;">
                                        <span t-field="line.name" />
                                    </td>
                                    <td colspan="2" style="background-color:#eeece1; text-align:center; font-weight:bold;">
                                        <span t-field="line.nombre" />
                                    </td>
                                    <td colspan="2" style="background-color:#eeece1; text-align:center; font-weight:bold;">
                                        <span t-field="line.base" />
                                    </td>
                                    <td colspan="2" style="background-color:#eeece1; text-align:center; font-weight:bold;">
                                        <span t-esc="'{0:,.2f}'.format(int(line.total)).replace(',', ' ')" />
                                        <span t-esc="o.company_id.currency_id.symbol" />
                                    </td>
                                </tr>

                                <!--valisoa-->
                            </t>
                        </tbody>
                    </table>
                    <div style="font-family:Arial,
                        sans-serif;font-size:11px;">
                        <br />
                        <div>
                            COMMENTAIRES :
                        </div>
                        <div style="min-height: 30px; border:1px solid black;">
                            <!-- <span t-esc="o.commentaire" /> -->
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-2" />
                            <div class="col-4" style="text-align:left; font-weight:bold;">Le salarié</div>
                            <div class="col-4" style="text-align:right; font-weight:bold;">L'employeur</div>
                            <div class="col-2" />
                        </div>

                    </div>

                </t>
            </xpath>
        </template>
    </data>
</odoo>